#!/bin/sh

set -e

umask 077

basedir=~/.herbcoin
dbfile="$basedir/DB_CONFIG"
cfgfile="$basedir/herbcoin.conf"

[ -e "$basedir" ] || mkdir "$basedir"

# Herbcoin does not clean up DB log files by default
[ -e "$dbfile" ] || echo 'set_flags DB_LOG_AUTOREMOVE' > "$dbfile"

exec /usr/lib/herbcoin/herbcoin-qt "$@"
